{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": [
      "cypress",
      "node",
    ],
    "resolveJsonModule": true,
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "cypress"
  ],
  "exclude": [
    "node_modules",
    "src/typed/**"
  ],
  "linterOptions": {
    "exclude": [
      "./src/typed/index.ts"
    ]
  }
}
