{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "types": [
      "cypress",
      "node",
    ],
    "resolveJsonModule": true,
    "incremental": true
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "cypress",
  ],
  "exclude": [
    "node_modules"
  ],
}
